<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bankforlife">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS" />
    <uses-configuration android:name="org.apache.http.legacy" android:required="false"/>


    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CardDetails"
            android:launchMode="singleTop"></activity>
        <activity
            android:name=".CardList"
            android:launchMode="singleTop"></activity>
        <activity
            android:name=".SearchActivity"
            android:launchMode="singleTop"></activity>
        <activity
            android:name=".LocationActivity"
            android:launchMode="singleTop"></activity>
        <activity
            android:name=".MoreDetails"
            android:launchMode="singleTop"></activity>
        <activity
            android:name=".ProfileDetails"
            android:launchMode="singleTop"></activity>
        <activity
            android:name=".ResultDetails"
            android:launchMode="singleTop"></activity>
        <activity
            android:name=".LocationChoice"
            android:launchMode="singleTop"></activity>
    </application>
</manifest>