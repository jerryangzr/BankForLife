<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BCFFFEFE">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Categories"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"/>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        app:singleSelection="true"
        app:chipSpacingHorizontal="50dp"
        app:chipSpacingVertical="20dp">

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Entry"
            android:id="@+id/eat"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:text="食"
            android:textAlignment="gravity"
            android:textStyle="bold"
            android:checkable="true"
            app:chipBackgroundColor="#F7CD94"
            app:chipIcon="@drawable/eat"
            app:chipStrokeColor="@color/chip_stroke_color"
            app:chipStrokeWidth="2dp"
            app:iconStartPadding="10dp"
            app:chipCornerRadius="50dp"
            app:closeIconVisible="false"
            app:checkedIconVisible="false"/>

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Entry"
            android:id="@+id/cloth"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:checkable="true"
            android:gravity="center_horizontal"
            android:text="衣"
            android:textStyle="bold"
            app:chipBackgroundColor="#9AD5AF"
            app:chipIcon="@drawable/cloth"
            app:chipStrokeColor="@color/chip_stroke_color"
            app:chipStrokeWidth="2dp"
            app:iconStartPadding="10dp"
            app:chipCornerRadius="50dp"
            app:closeIconVisible="false"
            app:checkedIconVisible="false"/>

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Entry"
            android:id="@+id/living"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:checkable="true"
            android:text="住"
            android:textStyle="bold"
            app:chipBackgroundColor="#E8CDEE"
            app:chipIcon="@drawable/living"
            app:chipStrokeColor="@color/chip_stroke_color"
            app:chipStrokeWidth="2dp"
            app:iconStartPadding="10dp"
            app:chipCornerRadius="50dp"
            app:closeIconVisible="false"
            app:checkedIconVisible="false"/>

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Entry"
            android:id="@+id/commute"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:checkable="true"
            android:text="行"
            android:textStyle="bold"
            app:chipBackgroundColor="#F1ADAD"
            app:chipIcon="@drawable/commute"
            app:chipStrokeColor="@color/chip_stroke_color"
            app:chipStrokeWidth="2dp"
            app:iconStartPadding="10dp"
            app:chipCornerRadius="50dp"
            app:closeIconVisible="false"
            app:checkedIconVisible="false"/>

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Entry"
            android:id="@+id/education"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:checkable="true"
            android:text="育"
            android:textStyle="bold"
            app:chipBackgroundColor="#484657F3"
            app:chipIcon="@drawable/education"
            app:chipStrokeColor="@color/chip_stroke_color"
            app:chipStrokeWidth="2dp"
            app:iconStartPadding="10dp"
            app:chipCornerRadius="50dp"
            app:closeIconVisible="false"
            app:checkedIconVisible="false"/>

        <com.google.android.material.chip.Chip
            style="@style/Widget.MaterialComponents.Chip.Entry"
            android:id="@+id/entertainment"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:checkable="true"
            android:text="樂"
            android:textStyle="bold"
            app:chipBackgroundColor="#D1CCCC"
            app:chipIcon="@drawable/entertainment"
            app:chipStrokeColor="@color/chip_stroke_color"
            app:chipStrokeWidth="2dp"
            app:iconStartPadding="10dp"
            app:chipCornerRadius="50dp"
            app:closeIconVisible="false"
            app:checkedIconVisible="false"/>

    </com.google.android.material.chip.ChipGroup>

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/choices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/category"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"
        app:chipSpacing="8dp">

    </com.google.android.material.chip.ChipGroup>

</RelativeLayout>